  <body>
    <!-- Install button, hidden by default -->
    <!-- <div id="installContainer" class="hidden">
      <button id="butInstall" type="button">Install</button>
    </div> -->
    <noscript>
      <style>
        noscript {
          display: block !important;
          font-weight: bolder;
          font-size: 2rem;
          text-align: center;
          color: #fff;
          margin: 2rem;
        }
        div {
          display: none;
        }
      </style>
      <%= __('noJavascript')%>
    </noscript>
    <div class="app" ondragenter="handleDragAndDropEnter(event)">
      <div class="center">
        <div id="sector1">
          <h2 class="codeLabel label"><%= __('codeLabel')%></h2>
          <!-- <h1 align="center"><span href="#" class="code">underline</span></h1> -->
          <div class="codeBox" data-tooltip="Click To Copy Code">
            <span class="code"></span>
          </div>
          <!-- 첫화면 -->
          <div id="welcome">
            <div class="waitLabel" aria-busy="true" hidden>
              <i class="fa-solid fa-circle-notch fa- spin"></i> <%=
              __('waitCodeInputLabel')%>
            </div>
          </div>
        </div>
        <!-- <hr class="hr-text" data-content="OR" /> -->
        <div id="sector2">
          <h2 class="label codeInputLabel"><%= __('codeInputLabel')%></h2>
          <div class="enterRoomDiv animate__animated">
            <form action="" id="enterRoom">
              <input
                autocomplete="off"
                type="text"
                class="roomCodeInput"
                id="roomCodeInput"
                placeholder="<%= __('codeInputPlaceholder')%>"
                maxlength="5"
              />
              <button class="enterButton animate__animated">
                <%= __('enterButton')%>
              </button>
            </form>
          </div>
        </div>
        <!-- footer -->
        <div class="footerDiv">
          <div class="footerLeft">
            <div class="developerLogos">
              <span class="developerLogo">Developers:</span>
              <a
                class="developerLogo"
                href="https://github.com/obtuse-triangle"
                target="_blank"
                >Obtuse-Triangle<i
                  class="fa-solid fa-caret-up triangleLogo"
                ></i>
                <span class="newTabIcon"
                  ><i class="fa-solid fa-up-right-from-square"></i></span
              ></a>
              <a
                class="developerLogo"
                href="https://github.com/NY0510"
                target="_blank"
                >NY64
                <i class="fa-solid fa-moon"></i>
                <span class="newTabIcon"
                  ><i class="fa-solid fa-up-right-from-square"></i
                ></span>
              </a>
            </div>
            <div class="viewOnGithub">
              <a
                class="viewOnGithubLink"
                target="_blank"
                href="https://github.com/NY0510/triangleDrop"
                ><i class="fa-brands fa-github"></i> View Source on Github</a
              >
            </div>
          </div>
        </div>
      </div>

      <!-- 룸 입장후 -->
      <div id="inRoom" hidden>
        <div class="progress">
          <div class="sendProgress" hidden>
            <div class="label">
              <span class="sendProgressSending">Sending...</span>
              <span class="txProgressBarFileName"></span>
              <span class="txProgressBarFileSize"></span>
            </div>
            <progress id="sendProgressBar" max="0" value="0"></progress>
          </div>
          <div class="receiveProgress" hidden>
            <div class="label">
              <span class="receiveProgressReceiving">Receiveing... </span>
              <span class="rxProgressBarFileName"></span>
              <span class="rxProgressBarFileSize"></span>
            </div>
            <progress id="receiveProgressBar" max="0" value="0"></progress>
          </div>
        </div>
        <div id="messageBlock"></div>
        <form action="" class="animate__animated" id="messageForm">
          <div class="messageSendBlock">
            <div class="filesPreview" hidden></div>
            <div class="messageDiv">
              <input autocomplete="off" type="text" id="messageInput" />
              <label for="fileInput" class="fileInputLabel">
                <i class="fa-solid fa-paperclip fa-fw"></i
              ></label>
              <input
                type="file"
                placeholder="file select"
                id="fileInput"
                onchange="handleChangeFile(event)"
              />
              <button id="messageSendButton">
                <i class="fa-solid fa-paper-plane"></i>
              </button>
            </div>
          </div>
        </form>
        <div class="dragAndDrop">
          <i class="fa-solid fa-inbox-full"></i>
        </div>
      </div>
    </div>

